@model AllMoviesViewModel

@{
    ViewBag.Title = "All Movies";
}
<label class="small font-weight-bold font-italic" asp-for="SearchTerm"></label>
<form class="form-inline" method="get">
    <input asp-for="SearchTerm" class="form-control mr-sm-2" type="search" placeholder="Search term" aria-label="Search">
    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
</form>

<div class="row">
    @foreach (var movie in Model.Movies)
    {
        <div class="p-lg-2">
            <div class="card" style="width: 16rem; padding:7px;">
                <img class="card-img-top" src="@movie.Image" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">@movie.Title</h5>
                    <p class="card-text">@movie.Summary.Substring(0, 50)...</p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <span class="font-weight-bold">Actors:</span>
                        <span>
                            @string.Join(", ", movie.Actors.Select(a => a.FirstName + " " + a.LastName))
                        </span>
                    </li>
                    <li class="list-group-item">
                        <span class="font-weight-bold">Directors:</span>
                        <span>
                            @string.Join(", ", movie.Directors.Select(d => d.FirstName + " " + d.LastName))
                        </span>
                    </li>
                    <li class="list-group-item">
                        <span class="font-weight-bold">Countries:</span>
                        <span>
                            @string.Join(", ", movie.Countries.Select(c => c.Name))
                        </span>
                    </li>
                </ul>
                <div class="card-body">
                    <a href="@movie.Id" class="card-link btn btn-primary text-center">Details</a>
                </div>
            </div>
        </div>
    }
</div>
@{
    var previousPage = Model.CurrentPage - 1;

    if (previousPage < 1)
    {
        previousPage = 1;
    }

    var maxPage = Math.Ceiling((double)Model.TotalMovies / AllMoviesViewModel.MoviesPerPage);
}
<div class="w3-clear nextprev text-center">
    <a class="w3-left btn btn-primary @(Model.CurrentPage == 1 ? "disabled" : string.Empty) "
       asp-controller="Movies"
       asp-action="All"
       asp-route-currentPage="@previousPage">
        ❮ Previous page
    </a>
    <a class="w3-right btn btn-primary @(Model.CurrentPage == maxPage ? "disabled" : string.Empty)"
       asp-controller="Movies"
       asp-action="All"
       asp-route-currentPage="@(Model.CurrentPage + 1)">
        Next page ❯
    </a>
</div>
